{
  "name": "clearpath",
  "version": "1.0.0",
  "description": "ClearPath Progressive Web App and API server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "vite",
    "dev:server": "nodemon --watch server --ext js,json --exec \"node server/server.js\"",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server/server.js",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "idb": "^8.0.0",
    "maplibre-gl": "^3.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "workbox-background-sync": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.2",
    "vite-plugin-pwa": "^0.16.4"
  }
}
